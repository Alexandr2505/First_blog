<!DOCTYPE html>
<html>
  <head>
    <title>Exemp31</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class = "container">
      <nav class="navbar navbar-light bg-faded">
        <a class="navbar-brand" href="<%= posts_path %>">Grand Books</a>
          <ul class = "nav navbar-nav">
            <li class = "nav-item active pull-xs-right">
              <a class = "nav-link" href = "<%= posts_path %>">Posts</a>
            </li>
          </ul>
          <%= link_to 'New post', new_post_path, class: 'btn btn-outline-primary pull-xs-right' %>
      </nav>
    </div>
  </div>

    <div class = "container main"> 
      <div class = "row">
        <div class = "col-md-12">
          <% flash.each do |name, message| %>
          <div class = "alert alert-<%= name %>">
            <%= message %>
          </div>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>

  
  </body>
</html>
